---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    <!-- Language Barista Section -->
    <div style="margin: 2.5rem auto; max-width: 700px; padding: 1rem;">
      <h3 style="font-size: 1.3rem; font-weight: 700; margin-bottom: 0.5rem; text-align: center;">
        Languages I speak (and sometimes mumble in) described as coffee ☕️
      </h3>
      <p style="text-align: center; font-size: 0.95rem; margin-bottom: 1.5rem;">
        I love coffee and I love languages, so here’s my personal language menu, from bold espressos to milky blends.
      </p>

      <div style="display: grid; grid-template-columns: 1fr 3fr; gap: 1rem; font-size: 0.95rem;">
        
        <!-- Spanish -->
        <div style="font-weight: 600;">🇪🇸 Spanish</div>
        <div>
          <div style="background: var(--global-code-bg-color); border-radius: 20px; overflow: hidden;">
            <div style="width: 100%; background-color: #1F1F1F; padding: 6px 10px; color: white; font-size: 0.85rem;">
              Native Blend
            </div>
          </div>
        </div>

        <!-- English -->
        <div style="font-weight: 600;">🇬🇧 English</div>
        <div>
          <div style="background: var(--global-code-bg-color); border-radius: 20px; overflow: hidden;">
            <div style="width: 95%; background-color: #3A3A36; padding: 6px 10px; color: white; font-size: 0.85rem;">
              Full Roast (Professional)
            </div>
          </div>
        </div>

        <!-- Danish -->
        <div style="font-weight: 600;">🇩🇰 Danish</div>
        <div>
          <div style="background: var(--global-code-bg-color); border-radius: 20px; overflow: hidden;">
            <div style="width: 80%; background-color: #5A5247; padding: 6px 10px; color: white; font-size: 0.85rem;">
              Solid Brew (Working proficiency)
            </div>
          </div>
        </div>

        <!-- French -->
        <div style="font-weight: 600;">🇫🇷 French</div>
        <div>
          <div style="background: var(--global-code-bg-color); border-radius: 20px; overflow: hidden;">
            <div style="width: 45%; background-color: #8B6D5C; padding: 6px 10px; color: white; font-size: 0.85rem;">
              Light Roast
            </div>
          </div>
        </div>

        <!-- German -->
        <div style="font-weight: 600;">🇩🇪 German</div>
        <div>
          <div style="background: var(--global-code-bg-color); border-radius: 20px; overflow: hidden;">
            <div style="width: 40%; background-color: #A98467; padding: 6px 10px; color: white; font-size: 0.85rem;">
              Light Roast
            </div>
          </div>
        </div>
      </div>
    </div>
   
    
    <!-- Spotify Playlist Section -->
    <div style="margin: 2rem 0;">
      <h3 style="font-size: 1.2rem; font-weight: 600; margin-bottom: 0.5rem;">My favourite work playlist</h3>
      <p style="font-size: 0.9rem; line-height: 1.5;">Here’s what I’ve been listening to lately when working.</p>
      <iframe style="border-radius:12px; width: 100%; max-width: 930px;"
              src="https://open.spotify.com/embed/playlist/4aJ8roXTQIUZyZ3Ns5Pbk7?utm_source=generator&theme=0"
              height="152"
              frameborder="0"
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy">
      </iframe>
    </div>

    <style>
      @media (max-width: 600px) {
        .goodreads-wrapper {
          justify-content: center !important;
          text-align: center !important;
        }
        .goodreads-content {
          text-align: center !important;
        }
      }
    </style>

   <!-- Goodreads Section -->
    <div style="margin-top: 2rem; display: flex; justify-content: flex-end; flex-wrap: wrap;" class="goodreads-wrapper">
      <div style="max-width: 500px; width: 100%; box-sizing: border-box; text-align: right; padding: 1rem;" class="goodreads-content">
        <h3 style="font-size: 1.2rem; font-weight: 600; margin-bottom: 0.5rem;">What I am reading this year</h3>
        <p style="font-size: 0.9rem; line-height: 1.5;">Here’s a glimpse at my reading challenge and recent books on Goodreads.</p>

        {% raw %}
        <div id="gr_challenge_11627" style="
            border: 2px solid #EBE8D5;
            border-radius: 12px;
            padding: 20px;
            background-color: #faf9f6;
            font-size: 16px;
            box-sizing: border-box;
            width: 100%;
          ">
          <div id="gr_challenge_progress_body_11627" style="font-family: georgia,serif; line-height: 1.8;">
            <h3 style="margin: 0 0 20px; font-weight: normal; text-align: center;">
              <a style="text-decoration: none; font-style: italic; font-size: 1.6em;" rel="nofollow"
                href="https://www.goodreads.com/challenges/11627-2025-reading-challenge">
                2025 Reading Challenge
              </a>
            </h3>

            <div style="display: flex; flex-direction: row-reverse; align-items: center; flex-wrap: wrap; gap: 1rem;">
              <a rel="nofollow" href="https://www.goodreads.com/challenges/11627-2025-reading-challenge">
                <img alt="2025 Reading Challenge"
                  style="width: 160px; height: auto; border-radius: 6px;" 
                  src="https://images.gr-assets.com/challenges/1733511050p2/11627.jpg" />
              </a>

              <div style="flex: 1; min-width: 200px;">
                <div style="margin-bottom: 10px;">
                  <a rel="nofollow" href="https://www.goodreads.com/user/show/146733831-sergio-lozano">Sergio</a>
                  has read <strong>7 books</strong> toward their goal of <strong>20 books</strong>.
                </div>

                <div
                  style="width: 100%; height: 14px; border: 1px solid #382110; background-color: #fff; border-radius: 6px; overflow: hidden;">
                  <div style="width: 35%; background-color: #D7D2C4; height: 100%;"></div>
                </div>

                <div style="margin-top: 8px; font-family: Arial, sans-serif; font-size: 1em;">
                  <a rel="nofollow" href="https://www.goodreads.com/user_challenges/61727875">7 of 20 (35%)</a>
                </div>
              </div>
            </div>

            <div style="text-align: right; margin-top: 1rem;">
              <a style="text-decoration: none; font-size: 14px;" rel="nofollow"
                href="https://www.goodreads.com/user_challenges/61727875">View books</a>
            </div>
          </div>

          <script src="https://www.goodreads.com/user_challenges/widget/146733831-sergio-lozano?challenge_id=11627&v=2"></script>
        </div>
        {% endraw %}
      </div>
    </div>

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
